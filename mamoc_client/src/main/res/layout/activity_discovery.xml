<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiscoveryActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarDiscovery"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        android:text="Edge-based Mobile Application Partitioning"
        app:layout_constraintBottom_toTopOf="@+id/discoverBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/discoverBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="20dp"
        android:text="Discover nearby devices"
        app:layout_constraintBottom_toTopOf="@+id/ListenPort"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/ListenPort"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="52dp"
        android:text="Listening on port: "
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discoverBtn" />

    <Button
        android:id="@+id/cloudletConnect"
        android:layout_width="196dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:text="Connect to Cloudlet"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/cloudletTextView"
        app:layout_constraintStart_toStartOf="@+id/cloudletTextView"
        app:layout_constraintTop_toBottomOf="@+id/cloudletTextView" />

    <Button
        android:id="@+id/cloudConnect"
        android:layout_width="196dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorAccent"
        android:text="Connect to Cloud"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cloudTextView" />

    <EditText
        android:id="@+id/cloudletTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="12dp"
        android:text="localhost"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/cloudletConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/cloudTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="13dp"
        android:text="Enter Cloud Server IP"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/cloudConnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Spinner
        android:id="@+id/cloudletSpinner"
        android:layout_width="180dp"
        android:layout_height="47dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="197dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/cloudTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/cloudSpinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="9dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="Previously connected cloudlets:"
        app:layout_constraintBottom_toTopOf="@+id/cloudletTextView"
        app:layout_constraintEnd_toStartOf="@+id/cloudletSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListenPort" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="11dp"
        android:text="Previously connected cloud servers:"
        app:layout_constraintBottom_toTopOf="@+id/cloudTextView"
        app:layout_constraintEnd_toStartOf="@+id/cloudSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cloudConnect" />

    <!--<android.support.design.widget.FloatingActionButton-->
